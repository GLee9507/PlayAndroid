<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.glee.libbase.recycler.ItemHolder&lt;com.glee.libbase.bean.ArticleBean.DatasBean>" />

        <import type="com.glee.libbase.util.Action" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvContent"
            android:layout_height="wrap_content"
            android:longClickable="true"
            android:onClick="@{(view)->data.actionListener.onAction(view.id,Action.CLICK,data.position)}"
            android:text="@{data.data.chapterName}" />
    </android.support.constraint.ConstraintLayout>
</layout>
